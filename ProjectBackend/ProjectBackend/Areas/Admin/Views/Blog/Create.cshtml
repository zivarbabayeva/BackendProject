@model Blog
@{
    ViewData["Title"] = "Blog";
}

<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Create Blog</h4>
                <form class="forms-sample" method="post">

                    <div class="form-group">
                        <label asp-for="Blogdetails.ImageUrl"></label>
                        <input asp-for="Blogdetails.ImageUrl" class="form-control" id="exampleInputName1" placeholder="">
                        <span class="text-danger" asp-validation-for="Blogdetails.ImageUrl"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Blogdetails.Title"></label>
                        <input asp-for="Blogdetails.Title" class="form-control" id="exampleInputName1" placeholder="">
                        <span class="text-danger" asp-validation-for="Blogdetails.Title"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Blogdetails.Bywhom"></label>
                        <input asp-for="Blogdetails.Bywhom" class="form-control" id="exampleInputName1" placeholder="">
                        <span class="text-danger" asp-validation-for="Blogdetails.Bywhom"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Blogdetails.Date"></label>
                        <input asp-for="Blogdetails.Date" class="form-control" id="exampleInputName1" placeholder="">
                        <span class="text-danger" asp-validation-for="Blogdetails.Date"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Blogdetails.Description"></label>
                        <input asp-for="Blogdetails.Description" class="form-control" id="exampleInputName1" placeholder="">
                        <span class="text-danger" asp-validation-for="Blogdetails.Description"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Blogdetails.SubDescription"></label>
                        <input asp-for="Blogdetails.SubDescription" class="form-control" id="exampleInputName1" placeholder="">
                        <span class="text-danger" asp-validation-for="Blogdetails.SubDescription"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Blogdetails.Desc"></label>
                        <input asp-for="Blogdetails.Desc" class="form-control" id="exampleInputName1" placeholder="">
                        <span class="text-danger" asp-validation-for="Blogdetails.Desc"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Blogdetails.Subdesc"></label>
                        <input asp-for="Blogdetails.Subdesc" class="form-control" id="exampleInputName1" placeholder="">
                        <span class="text-danger" asp-validation-for="Blogdetails.Subdesc"></span>
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <a class="btn btn-light" asp-action="Index">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>
@section Script
{

    <script src="https://cdn.ckeditor.com/ckeditor5/27.1.0/classic/ckeditor.js"></script>
    <script>
        ClassicEditor
            .create(document.querySelector('#editor'))
            .catch(error => {
                console.error(error);
            });
        <partial name="_ValidationPartial" />
    </script>
}