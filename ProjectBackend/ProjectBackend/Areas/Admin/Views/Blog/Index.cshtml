

@model List<Blog>

@{
    ViewData["Title"] = "BlogIndex";
}
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Blogs</h4>

                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    Blog Image
                                </th>
                                <th>
                                    Blog Title
                                </th>
                                <th>
                                    Blog's Date
                                </th>
                                <th>
                                    Setting
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Blog blogs in Model)
                            {
                                <tr>

                                    <td>
                                        <img style="width:130PX !important; height:130px !important" src="~/img/blog/@blogs.ImageUrl" />
                                    </td>
                                    <td>
                                        @blogs.Title
                                    </td>
                                    <td>
                                            @blogs.Date
                                        </td>
                                    <td>
                                        <a class="btn btn-primary" asp-action="Detail" asp-route-id="@blogs.Id"><i class="mdi mdi-details"></i></a>
                                        <a class="btn btn-danger" asp-action="Update" asp-route-id="@blogs.Id"><i class="mdi mdi-tooltip-edit"></i></a>
                                        <a class="btn btn-success" asp-action="Delete" asp-route-id="@blogs.Id"><i class="mdi mdi-delete-sweep"></i> </a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


