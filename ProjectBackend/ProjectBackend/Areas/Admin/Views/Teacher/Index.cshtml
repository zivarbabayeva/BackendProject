

@model List<Teacher>

@{
    ViewData["Title"] = "CourseIndex";
}
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Teachers</h4>

                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    Teachers Image
                                </th>
                                <th>
                                   Teachers Name
                                </th>
                                <th>
                                    Setting
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Teacher teach in Model)
                            {
                                <tr>

                                    <td>
                                        <img style="width:130PX !important; height:130px !important" src="~/img/course/@teach.ImageUrl" />
                                    </td>
                                    <td>
                                        @teach.Name
                                    </td>
                                    <td>
                                        <a class="btn btn-primary" asp-action="Detail" asp-route-id="@teach.Id"><i class="mdi mdi-details"></i></a>
                                        <a class="btn btn-danger" asp-action="Update" asp-route-id="@teach.Id"><i class="mdi mdi-tooltip-edit"></i></a>
                                        <a class="btn btn-success" asp-action="Delete" asp-route-id="@teach.Id"><i class="mdi mdi-delete-sweep"></i> </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


