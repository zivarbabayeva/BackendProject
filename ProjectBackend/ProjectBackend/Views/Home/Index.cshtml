@model HomeVM
@{
    ViewData["Title"] = "Index";

}
<!-- Background Area Start -->
<section id="slider-container" class="slider-area">
    <div class="slider-owl owl-theme owl-carousel">
        <!-- Start Slingle Slide -->
        @foreach (Slider slider in Model.Sliders)
        {
            <div>
                <div class="single-slide item" style="background-image: url(/img/slider/@slider.ImageUrl)">
                    <!-- Start Slider Content -->
                    <div class="slider-content-area">
                        <div class="container">
                            <div class="row">
                                <div class="col-md-7 col-md-offset-left-5">
                                    <div class="slide-content-wrapper">
                                        <div class="slide-content">
                                            @Html.Raw(slider.Title)
                                            <p>@slider.Description</p>
                                            <a class="default-btn" href="@Url.Action("Index","About")">Learn more</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

</section>
<!-- Notice Start -->
<section class="notice-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-sm-6 col-xs-12">
                <div class="notice-left">
                    <h3>Notice board</h3>
                    @foreach (NoticeBoard notice in Model.NoticeBoards)
                    {
                        <div class="single-notice-left mb-25 pb-25">
                            <h4>@notice.CreatedDate.ToString("dd MMM")</h4>
                            <p>@notice.Description</p>
                        </div>
                    }
                </div>
            </div>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <div class="notice-right">
                    @foreach (NoticeTwo noticetwo in Model.NoticeTwos)
                    {
                        <div class="single-notice-right mb-25 pb-25">
                            @Html.Raw(noticetwo.Title)
                            <p>@noticetwo.Description</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Notice End -->
<!-- Choose Start -->
