@model CourseDetails
@{
    ViewData["Title"] = "Details";
}

<!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>courses details</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Blog Start -->
<div class="courses-details-area blog-area pt-150 pb-140">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="courses-details">
                    <div class="courses-details-img">
                        <img src="~/img/course/@Model.CoursesOffer.ImageUrl" alt="courses-details">

                    </div>
                    <div class="course-details-content">
                        <h2>@Model.CoursesOffer.SubTitle</h2>
                        <p>@Model.CoursesOffer.Description</p>
                        <div class="course-details-left">
                            <div class="single-course-left">
                                <h3>about course</h3>
                                <p>@Model.AboutCourse</p>
                            </div>
                            <div class="single-course-left">
                                <h3>how to apply</h3>
                                <p>@Model.HowToApply</p>
                            </div>
                            <div class="single-course-left">
                                <h3>certification</h3>
                                <p>@Model.Certification</p>
                                <p></p>
                            </div>
                        </div>
                        <div class="course-details-right">
                            <h3>@Model.TabName</h3>
                            <ul>
                                <li>starts <span>@Model.Starts</span></li>
                                <li>duration <span>@Model.Duration</span></li>
                                <li>class duration <span>@Model.ClassDuration</span></li>
                                <li>skill level <span>@Model.SkilLevel</span></li>
                                <li>language <span>@Model.Language</span></li>
                                <li>students <span>@Model.StudentsCount</span></li>
                                <li>assesments <span>@Model.Assesments</span></li>
                            </ul>
                            <h3 class="red">course fee $@Model.CourseFee</h3>
                        </div>
                    </div>
                    <div class="reply-area">
                        <h3>LEAVE A REPLY</h3>
                        <p>I must explain to you how all this a mistaken idea of ncing great explorer of the rut<br> the is lder of human happinescias unde omnis iste natus error sit volptatem </p>
                        <form id="contact-form" action="http://demo.devitems.com/eduhome/mail.php" method="post">
                            <div class="row">
                                <div class="col-md-12">
                                    <p>Name</p>
                                    <input type="text" name="name" id="name">
                                </div>
                                <div class="col-md-12">
                                    <p>Email</p>
                                    <input type="text" name="email" id="email">
                                </div>
                                <div class="col-md-12">
                                    <p>Subject</p>
                                    <input type="text" name="subject" id="subject">
                                    <p>Massage</p>
                                    <textarea name="message" id="message" cols="15" rows="10"></textarea>
                                </div>
                            </div>
                            <a class="reply-btn" href="#" data-text="send"><span>send message</span></a>
                            <p class="form-messege"></p>
                        </form>
                    </div>
                </div>
            </div>
          

        </div>
    </div>
</div>
@await Component.InvokeAsync("Subscribe")
